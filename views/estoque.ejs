      <div class="main2">
        <header class="top-bar">
          <div class="left-side">
            <div class="logo">
              <div class="imagem"></div>
              <h1>VetControl</h1>
            </div>
          </div>
          <div class="right-side">
            <img class="userImage" src="../../assets/images/User.png" alt="" />
            <span class="userName">Dr.Ernandes</span>
          </div>
          <div class="mobile-modal-button">
            <img src="../../assets/images/burguer-icon-mobile.png" alt="" />
          </div>
        </header>
        <main>
          <button class="add-item">Adicionar Item</button>
          <section class="table-stock">
            <header>
              <p>Nome</p>
              <p>Categoria</p>
              <p>Preço</p>
              <p>Quantidade</p>
            </header>
            <div class="lines">
              <% estoque.forEach(item => { %>
             <div class="item"> 
                <div class="nome">
                  <img src="../../assets/images/vacina.png" alt="" />
                  <p> <%= item.newItemName %> </p>
                </div>
                <div class="categoria">
                  <p><%= item.newItemCategory%></p>
                </div>
                <div class="preco">
                  <p>R$<%= item.newItemPrice %>,00</p>
                </div>
                <div class="quantidade">
                  <p><%=  item.newItemQuantity%></p>
                  <button>
                    <img src="../../assets/images/edit.png" alt="" />
                  </button>
                </div>
             </div>
              <% }) %>
             
             
                
                
              </div>
            </div>
          </section>
        </main>
        <div class="modal-add-item stock">
          <div class="close">X</div>
          <h2>Adicione um item ao estoque</h2>
          <form action="/estoque" method="post" id="addStockItem">
            <div class="table-add">
              <div class="colunm-item">
                <p>Nome</p>
                <input type="text" id="newItemName" name="name" />
              </div>
              <div class="colunm-item">
                <p>Categoria</p>
                <select name="" id="newItemCategory" name="category">
                  <option value="">Selecione a categoria</option>
                  <option value="Vacina">Vacina</option>
                  <option value="Ração">Ração</option>
                  <option value="Medicament s">Medicamento</option>
                </select>
              </div>
              <div class="colunm-item">
                <p>Preço</p>
                <input type="number" id="newItemPrice" name="price" />
              </div>
              <div class="colunm-item" style="border: none">
                <p>Quantidade</p>
                <input type="number" id="newItemQuantity" name="quantity" />
              </div>
            </div>
            <button type="submit">Adicionar</button>
          </form>
        </div>

